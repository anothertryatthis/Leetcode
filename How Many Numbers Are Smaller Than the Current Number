class Solution {
public:
    vector<int> smallerNumbersThanCurrent(vector<int>& nums) {
        map<int, int> m;
        vector<int> t = nums;
        int n = nums.size();
        
        sort(t.begin(), t.end());
        
        for(int i = n-1; i >= 0; i--){
            m[t[i]] = i;
        }
        
        for(int i = 0; i < n; i++){
            nums[i] = m[nums[i]];
        }
        return nums;
    }
};
